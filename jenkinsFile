pipeline {
    agent any

    environment {
        DOCKER_HUB_CREDENTIALS = credentials('docker-hub-credentials')
        SONARQUBE_SERVER = 'Sonarqube'
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/imane-bouabidi/citronix_deploy.git', branch: 'main'
            }
        }

        stage('Start PostgreSQL') {
            steps {
                sh 'docker-compose up -d postgres'
                // Attendre que PostgreSQL soit prêt
                sh 'sleep 15'
            }
        }

        stage('Build and Test with Maven') {
            steps {
                // Exécuter les tests avec le profil de test
                sh 'mvn clean verify -Dspring.profiles.active=test'
            }
        }

        stage('SonarQube Analysis') {
            environment {
                SONAR_HOST_URL = 'http://localhost:9000'
                SONAR_AUTH_TOKEN = 'sonarqube-token'
            }
            steps {
                sh 'mvn sonar:sonar'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t imaneyoucode/citronix:${BUILD_NUMBER} .'
            }
        }

        stage('Push Docker Image') {
            steps {
                withDockerRegistry([credentialsId: 'docker-hub-credentials', url: '']) {
                    sh 'docker push imaneyoucode/citronix:${BUILD_NUMBER}'
                }
            }
        }

        stage('Deploy') {
            steps {
                sh 'docker-compose up -d app'
            }
        }
    }

    post {
        always {
            // Nettoyage
            sh 'docker-compose down'
            cleanWs()
        }
    }
}